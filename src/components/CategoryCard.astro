---
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'

interface Props {
  name: string
  image: ImageMetadata
  url: string
}

const { name, image, url } = Astro.props as Props
---

<div class="group relative mb-8 overflow-hidden rounded-md md:mb-0">
  <a href={url}>
    <div
      class="absolute inset-0 z-10 h-full w-full bg-black opacity-20 transition-opacity duration-300 ease-in-out group-hover:opacity-45"
    >
    </div>
    <Image
      class="rounded-md transition-transform duration-300 ease-in-out group-hover:scale-105"
      src={image}
      alt={name}
    />

    <p
      class="absolute bottom-4 left-4 z-20 text-200 font-500 text-white transition-all duration-300 group-hover:bottom-6"
    >
      {name}
    </p>
  </a>
</div>
