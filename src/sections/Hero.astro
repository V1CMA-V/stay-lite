---
import HeroImage from '@/assets/hero-bg.jpg'
import { Button } from '@/components/ui/button'
import { Image } from 'astro:assets'
---

<section class="mt:pt-10">
  <div class="relative z-40">
    <div
      class="absolute left-0 top-0 h-full w-full bg-linear-to-b from-black/50 to-background"
    >
    </div>

    <div class="container flex h-screen flex-col items-start justify-center">
      <div class="z-40 mx-auto max-w-[600px] text-center">
        <h1
          class="text-600 font-900 lg:text-[4rem] mb-2 leading-[1.3] text-center"
        >
          Relax in <span class="text-primary">Luxury</span>
        </h1>

        <p class="mb-4 text-white md:text-200">
          Experience the ultimate retreat at Stay Lite, where comfort meets
          sophistication.
        </p>

        <Button className="font-600 md:text-100 text-white"
          ><a href="/rooms">Book Your Stay</a></Button
        >
      </div>

      <Image
        class="absolute left-0 top-0 h-full w-full object-cover -z-10"
        src={HeroImage}
        alt="Hero Image"
      />
    </div>
  </div>
</section>
